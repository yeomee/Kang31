<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/input1"
                android:layout_width="30dp" android:layout_height="30dp"
                android:background="#FF996622"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/input2"
                android:layout_width="30dp" android:layout_height="30dp"
                android:background="#FF996622"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/input3"
                android:layout_width="30dp" android:layout_height="30dp"
                android:background="#FF996622"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/input4"
                android:layout_width="30dp" android:layout_height="30dp"
                android:background="#FF996622"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView
            android:id="@+id/btn2"
            style="@style/Password_Input"
            android:layout_marginLeft="60dp" android:layout_marginRight="60dp"
            android:layout_centerInParent="true"
            android:text="2" />
        <TextView
            android:id="@+id/btn1"
            style="@style/Password_Input"
            android:layout_toLeftOf="@id/btn2" android:layout_centerVertical="true"
            android:text="1" />
        <TextView
            android:id="@+id/btn3"
            style="@style/Password_Input"
            android:layout_toRightOf="@id/btn2" android:layout_centerVertical="true"
            android:text="3" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView
            android:id="@+id/btn5"
            style="@style/Password_Input"
            android:layout_marginLeft="60dp" android:layout_marginRight="60dp"
            android:layout_centerInParent="true"
            android:text="5" />
        <TextView
            android:id="@+id/btn4"
            style="@style/Password_Input"
            android:layout_toLeftOf="@id/btn5" android:layout_centerVertical="true"
            android:text="4" />
        <TextView
            android:id="@+id/btn6"
            style="@style/Password_Input"
            android:layout_toRightOf="@id/btn5" android:layout_centerVertical="true"
            android:text="6" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView
            android:id="@+id/btn8"
            style="@style/Password_Input"
            android:layout_marginLeft="60dp" android:layout_marginRight="60dp"
            android:layout_centerInParent="true"
            android:text="8" />
        <TextView
            android:id="@+id/btn7"
            style="@style/Password_Input"
            android:layout_toLeftOf="@id/btn8" android:layout_centerVertical="true"
            android:text="7" />
        <TextView
            android:id="@+id/btn9"
            style="@style/Password_Input"
            android:layout_toRightOf="@id/btn8" android:layout_centerVertical="true"
            android:text="9" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView
            android:id="@+id/btn0"
            style="@style/Password_Input"
            android:layout_marginLeft="60dp" android:layout_marginRight="60dp"
            android:layout_centerInParent="true"
            android:text="0" />
        <TextView
            android:id="@+id/btnCL"
            style="@style/Password_Input"
            android:layout_toLeftOf="@id/btn0" android:layout_centerVertical="true"
            android:text="CL" />
        <TextView
            android:id="@+id/btnBS"
            style="@style/Password_Input"
            android:layout_toRightOf="@id/btn0" android:layout_centerVertical="true"
            android:text="BS" />
    </RelativeLayout>

</LinearLayout>
